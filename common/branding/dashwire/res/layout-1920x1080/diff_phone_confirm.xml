<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/relativeLayout2"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white">
	<LinearLayout
		android:id="@+id/linearLayout1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<!-- Top Bar -->
		<include
			layout="@layout/top_bar_grey"
			android:id="@+id/error_top_bar" />

		<!-- Title Layout -->

		<LinearLayout
		    android:id="@+id/linearLayout3"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:gravity="center_horizontal"
		    android:orientation="vertical"
		    android:padding="20dp" >

		    <TextView
		        android:id="@+id/title"
		        style="@style/global_title_text_orange"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center|left"
		        android:paddingBottom="10dp"
		        android:paddingLeft="0dp"
		        android:paddingRight="0dp"
		        android:paddingTop="10dp"
		        android:text="@string/diff_phone_confirm_title"
		        android:textColor="@color/bright_red" >

		    </TextView>

		    <TextView
		        android:id="@+id/body"
		        style="@style/global_body_text_grey"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center|left"
		        android:paddingBottom="20dp"
		        android:text="@string/diff_phone_confirm_body"
		        android:textSize="18sp" />

		    <ImageView
		        android:id="@+id/error"
		        android:layout_width="110dp"
		        android:layout_height="110dp"
		        android:layout_margin="10dp"
		        android:background="@drawable/error"
		        android:contentDescription="@string/content_description__error_icon" />

		</LinearLayout>

		<!-- Body Layout -->

		<!-- Graphic Layout -->

	</LinearLayout>

	<!-- Button Layout -->

	<LinearLayout
	    android:id="@+id/LinearLayout01"
	    android:layout_width="fill_parent"
	    android:layout_height="50dp"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentLeft="false"
	    android:layout_alignParentTop="false"
	    android:background="@color/lightest_grey"
	    android:baselineAligned="false"
	    android:gravity="bottom|center"
	    android:padding="0dp" >

	    <Button
			android:text="@string/button_cancel"
			android:id="@+id/cancel_button"
	        style="@style/button_text_black"
	        android:layout_width="200dp"
	        android:layout_height="fill_parent"
	        android:layout_gravity="center_horizontal|center_vertical"
	        android:layout_margin="5dp"
	        android:background="@color/sky_blue"
	        android:padding="5dp"
	        android:textColor="@color/white" />
	</LinearLayout>

</RelativeLayout>
