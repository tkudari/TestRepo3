<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/relativeLayout2"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white">
	<LinearLayout
		android:id="@+id/linearLayout1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<!-- Top Bar -->
		<include
			layout="@layout/top_bar_grey"
			android:id="@+id/error_top_bar" />

		<!-- Title Layout -->

		<LinearLayout
		    android:id="@+id/linearLayout3"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_margin="20dp"
		    android:gravity="center_horizontal"
		    android:orientation="vertical"
		    android:paddingTop="10dp" >

			<TextView
			    android:id="@+id/title"
			    style="@style/global_title_text_orange"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:paddingBottom="10dp"
			    android:paddingTop="10dp"
			    android:text="@string/connectivity_error_title"
			    android:textColor="@color/bright_red" >

			</TextView>

			<TextView
			    android:id="@+id/body"
			    style="@style/global_body_text_grey"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:gravity="center|left"
			    android:paddingBottom="20dp"
			    android:text="@string/connectivity_error_body"
			    android:textSize="18sp" />

		</LinearLayout>

		<!-- Body Layout -->

		<!-- Graphic Layout -->
		<LinearLayout
			android:id="@+id/linearLayout5"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:gravity="center"
			android:paddingTop="25dp"
			android:paddingBottom="25dp">
			<ImageView
				android:id="@+id/error"
				android:layout_height="180dp"
				android:layout_width="180dp"
				android:background="@drawable/error">
			</ImageView>
		</LinearLayout>

	</LinearLayout>

	<!-- Button Layout -->

	<LinearLayout
	    android:id="@+id/button_layout"
	    android:layout_width="fill_parent"
	    android:layout_height="50dp"
	    android:layout_alignParentBottom="true"
	    android:background="@color/lightest_grey"
	    android:gravity="bottom|center"
	    android:padding="0dp" >

	    <Button
			android:text="@string/button_cancel"
			android:id="@+id/cancel_button"
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_gravity="center_horizontal|center_vertical"
	        android:layout_margin="5dp"
	        android:layout_weight="1"
	        android:background="@color/sky_blue"
	        android:padding="5dp"
	        android:textColor="@color/white" />

	    <Button
			android:text="@string/button_try_again"
			android:id="@+id/try_again_button"
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_gravity="center_horizontal|center_vertical"
	        android:layout_margin="5dp"
	        android:layout_weight="1"
	        android:background="@color/sky_blue"
	        android:padding="5dp"
	        android:textColor="@color/white" />
	</LinearLayout>

</RelativeLayout>
