<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1" >

        <!-- Top Bar -->

        <include layout="@layout/top_bar_grey" />

        <!-- Title Layout -->


        <!-- Body Layout -->


        <!-- Allow Location Check Box Layout -->

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title"
                style="@style/global_title_text_orange"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/google_location_title"
                android:textColor="@color/bright_green" />

            <TextView
                android:id="@+id/body"
                style="@style/global_body_text_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:text="@string/google_location_body"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/line"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="@color/light_grey" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/allow_location_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp" >

                <CheckBox
                    android:id="@+id/allow_loction_check_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/allow_location_text"
                    style="@style/global_body_text_grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingLeft="20dp"
                    android:text="@string/google_location_check_text" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Button Layout -->

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/lightest_grey"
        android:padding="0dp" >

        <Button
            android:id="@+id/back_button"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/sky_blue"
            android:padding="5dp"
            android:text="@string/button_back"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/next_button"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/sky_blue"
            android:padding="5dp"
            android:text="@string/button_next"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>