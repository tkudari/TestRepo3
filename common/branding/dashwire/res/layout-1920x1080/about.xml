<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <!-- Top Bar -->

        <include layout="@layout/top_bar_grey" />

        <!-- Title Layout -->

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="20dp" >

            <TextView
                android:id="@+id/title"
                style="@style/global_title_text_orange"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="10dp"
                android:text="@string/about_title"
                android:textColor="@color/bright_green" >
            </TextView>

            <TextView
                android:id="@+id/body"
                style="@style/global_body_text_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="10dp"
                android:text="@string/about_body"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/about_next_link"
                style="@style/global_body_text_grey"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingBottom="10dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="10dp"
                android:text="@string/about_next_link"
                android:textColor="@color/bright_green"
                android:textSize="22sp" />
        </LinearLayout>

        <!-- Body Layout -->


        <!-- Next link -->

    </LinearLayout>

    <!-- Button Layout -->

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/lightest_grey"
        android:padding="0dp" >

        <!-- Back Button -->

        <Button
            android:id="@+id/back_button"
            style="@style/button_text_black"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/sky_blue"
            android:padding="5dp"
            android:text="@string/button_back"
            android:textColor="@color/white" >
        </Button>
        <!-- Next Button -->

        <Button
            android:id="@+id/next_button"
            style="@style/button_text_black"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/sky_blue"
            android:padding="5dp"
            android:text="@string/button_next"
            android:textColor="@color/white" >
        </Button>
    </LinearLayout>

</RelativeLayout>