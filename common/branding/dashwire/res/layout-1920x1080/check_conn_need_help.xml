<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <include layout="@layout/top_bar_grey" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="20dp" >

            <TextView
                android:id="@+id/check_conn_need_help_title"
                style="@style/global_title_text_orange"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:paddingBottom="10dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="10dp"
                android:text="@string/check_conn_need_help_title"
                android:textColor="@color/bright_red" />

            <TextView
                android:id="@+id/check_conn_need_help_body"
                style="@style/global_body_text_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:paddingBottom="20dp"
                android:text="@string/check_conn_need_help_body"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/error"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="20dp"
                android:background="@drawable/error"
                android:contentDescription="@string/error_image_desc" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/lightest_grey"
        android:gravity="bottom|center"
        android:padding="0dp" >

        <Button
            android:id="@+id/cancel_button"
            style="@style/button_text_black"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/sky_blue"
            android:padding="5dp"
            android:text="@string/button_cancel"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/try_again_button"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/sky_blue"
            android:padding="5dp"
            android:text="@string/button_try_again"
            android:textColor="@color/white" />
    </LinearLayout>

    <!-- Button Layout -->

</RelativeLayout>